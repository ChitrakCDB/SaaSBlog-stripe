<%= form_with(model: [post, comment])  do |f| %>
  <%= f.hidden_field :user_id,value: current_user.id%>
  <%= f.hidden_field :post_id,value: post.id%>
  <%= f.label :comment, "Comment :", class:"mt-3" %>
  <div class="d-flex align-items-center">
  <%= f.text_field :comment_text, placeholder: "Enter comment", class:" form-control" %>
  <%= f.submit 'Leave a reply',  class:"btn-success  border-0 p-2 rounded center"%>
  </div>
<% end %>
