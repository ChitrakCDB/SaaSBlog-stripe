<div class="set-center flex-column" style="height:100vh;">
  <div class="card" style="width: 20rem;">
    <div class="card-header">
      <h2 class="text-center">Sign Up</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "mb-3 form-control" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password",class: "mb-3 form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "mb-3 form-control" %>
      </div>
      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password",class: "mb-3 form-control" %>
      </div>
      <div class="actions d-flex justify-content-center mt-2">
        <%= f.submit "Update", class: "btn-primary border-0 rounded shadow w-100 my-3 py-2" %>
      </div>
    <% end %>
    <h3>Cancel my account</h3>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn-danger border-0 rounded shadow w-100 my-3 py-2" %></p>
    <% if current_user %>
      <strong>Stripe Customer ID:</strong>
      <%= current_user.stripe_customer_id %>
      <br>
      <strong>Plan:</strong>
      <%= current_user.plan %>
      <br>
      <strong>Subscription Status:</strong>
      <%= current_user.subscription_status %>
    <% end %>
    <%= link_to "Back", :back %>
